<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/toPhoneNumberTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/phone_number_lbl" />

    <EditText
        android:id="@+id/toPhoneNumberET"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="phone"/>

    <TextView
        android:id="@+id/smsMessageTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sms_txt_area_lbl"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/smsMessageET"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:inputType="textMultiLine"/>

    <Button android:id="@+id/sendSMSBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/send_sms_action_lbl"
        android:layout_marginTop="53dp" />

</LinearLayout>
